generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  name     String
  role     String
  schoolId String
  school   School  @relation(fields: [schoolId], references: [id])
  classes  Class[] @relation("TeacherClasses")
}

model School {
  id      String  @id @default(cuid())
  name    String
  users   User[]
  classes Class[]
}

model Class {
  id          String       @id @default(cuid())
  name        String
  schoolId    String
  teacherId   String
  school      School       @relation(fields: [schoolId], references: [id])
  teacher     User         @relation("TeacherClasses", fields: [teacherId], references: [id])
  students    Student[]
  assignments Assignment[]
}

model Student {
  id          String            @id @default(cuid())
  name        String
  email       String?
  classId     String
  class       Class             @relation(fields: [classId], references: [id])
  submissions Submission[]
  sessions    PracticeSession[]
  moodChecks  MoodCheck[]
}

model Assignment {
  id              String       @id @default(cuid())
  classId         String
  title           String
  topic           String
  dueAt           DateTime
  timeEstimateMin Int
  class           Class        @relation(fields: [classId], references: [id])
  submissions     Submission[]
}

model Submission {
  id           String    @id @default(cuid())
  assignmentId String
  studentId    String
  scorePct     Float?
  completedAt  DateTime?

  student    Student    @relation(fields: [studentId], references: [id])
  assignment Assignment @relation(fields: [assignmentId], references: [id])
}

model PracticeSession {
  id          String   @id @default(cuid())
  studentId   String
  startedAt   DateTime
  durationMin Int
  accuracyPct Float

  student Student @relation(fields: [studentId], references: [id])
}

model MoodCheck {
  id        String   @id @default(cuid())
  studentId String
  date      DateTime
  moodScore Int

  student Student @relation(fields: [studentId], references: [id])
}
